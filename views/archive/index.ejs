<%- include('../layout/header'); %>

    <main class="main">
        <div class="container">
            <div class="content">
                <% for (let i = 0; i < posts.length; i++) { %>
                <div class="post">
                    <div class="post__title">
                        <a href="/posts/<%= posts[i].url %>" class="link"><%= posts[i].title %></a>
                        <% if (posts[i].owner.login === user.login) { %>
                        <a href="/post/edit/<%=posts[i].id %>" class="edit-link">✎</a>
                        <% } %>
                    </div>
                    <div class="post__body">
                        <%= posts[i].body %>
                    </div>
                    <div class="post__footer">
                        <div class="post__author">
                            Автор: <a href="/users/<%=posts[i].owner.login %>" class="link"><%= posts[i].owner.login %></a>
                        </div>
                        <a href="/posts/<%=posts[i].url %>" class="link">Комментарии: <%=posts[i].commentCount %></a>
                    </div>
                </div>
                <% } %>
                <div class="pagination">
                    <% if (pages > 0 && current > 2) { %>
                        <a href="/archive/<%= Number(current) - 1 %>" class="new">К новым ←</a>
                    <% } %>
                    <% if (pages > 0 && current == 2) { %>
                        <a href="/" class="new">На главную ←</a>
                    <% } %>
                    <% if (pages > 0 && current < pages) { %>
                        <a href="/archive/<%= Number(current) + 1 %>" class="old">К старым →</a>
                    <% } %>
                </div>
            </div>

            <%- include('../layout/sidebar'); %>

        </div>
    </main>

<%- include('../layout/footer'); %>