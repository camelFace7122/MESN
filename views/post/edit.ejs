<%- include('../layout/header'); %>

    <main class="main">
        <div class="container">
            <div class="content add_post">
                <form class="post-form">
                    <% if (post.title) { %>
                        <h2>Редактирование поста</h2>
                    <% } else { %>
                        <h2>Добавление поста</h2>
                    <% } %>
                    <div class="form-group">
                        <label for="post-title">Заголовок:</label>
                        <input type="text" id="post-title" name="title" class="form-input" 
                        value="<%= post.title %>"/>
                    </div>
                    <div class="form-group">
                        <label for="post-body">Текст:</label>
                        <textarea id="post-body" name="body" class="form-input"><%= post.body %></textarea>
                    </div>
                    <input type="hidden" name="postId" id="post-id" value="<%= typeof post !== 'undefined' ? post.id : '' %>">
                    <div class="button-group">
                        <button class="save-btn secondary-inverse">Сохранить как черновик</button>
                        <button class="publish-btn">Опубликовать</button>
                    </div>
                </form>

                <form enctype="multipart/form-data" id="fileinfo">
                    <input type="file" name="file" id="file" required>
                    <button class="upload-btn success">Загрузить</button>
                </form>
        </div>
        <%- include('../layout/sidebar'); %>
    </main>

    <%- include('../layout/footer'); %>