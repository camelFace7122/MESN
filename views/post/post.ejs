<%- include('../layout/header'); %>

    <main class="main">
        <div class="container">
            <div class="content">
                <div class="post">
                    <div class="post__title">
                        <%= post.title %>
                    </div>
                    <div class="post__body">
                        <%= post.body %>
                    </div>
                    <div class="post__footer">
                        <div class="post__author">
                            Автор: <a href="/" class="link"><%= post.owner.login %></a>
                        </div>
                        <a href="#new" class="link">Комментарии</a>
                    </div>
                </div>

                <div class="comments" data-id="<%=post.id %>">
                    <h3 class="comments-title">Комментарии</h3>
                    <div class="comments-list">
                        <%- include('../layout/comments.ejs', {items: comments, moment}) %>
                        <form class="comment">
                            <textarea name="body"></textarea>
                            <div class="button-group">
                                <button class="cancel secondary-inverse">Отмена</button>
                                <button class="send">Опубликовать</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <%- include('../layout/sidebar'); %>

        </div>
    </main>

<%- include('../layout/footer'); %>